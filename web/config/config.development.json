{
  "app": {
    "name": "Demo Stack - Web"
  },
  "server": {
    "host": "127.0.0.1",
    "port": 3001
  },
  "api": {
    "host": "127.0.0.1",
    "port": 3000,
    "enabled": true
  },
  "auth": {
    "tokenUrl":"/token",
    "clientId":"testClient",
    "secret":"superSecret"
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "path": "./log",
    "filename": "dadi-web",
    "extension": "log"
  },
  "caching": {
    "ttl": 300,
    "directory": {
      "enabled": false,
      "path": "./cache/web/",
      "extension": "html"
    }
  },
  "paths": {
    "datasources": "app/datasources",
    "events": "app/events",
    "filters": "app/utils/filters",
    "helpers": "app/utils/helpers",
    "media": "app/media",
    "middleware": "app/middleware",
    "pages": "app/pages",
    "partials": "app/partials",
    "public": "app/public",
    "routes": "app/routes",
    "tokenWallets": ".wallet"
  },
  "rewrites": {
    "forceTrailingSlash": true,
    "forceLowerCase": true
  },
  "debug": true,
  "allowJsonView": true
}
